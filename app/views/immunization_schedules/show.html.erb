<div class="row">
<div class="col-md-3 col-xl-2 bg-light sidebar">
      <%= render partial: "shared/sidebar" %>
    </div>
<div class="col-md-9 col-xl-10">

<%= render @immunization_schedule %>

<div class="mt-3 button-container">
  <%= link_to "Edit this Schedule", edit_immunization_schedule_path(@immunization_schedule), class: "btn btn-primary btn-block" %>
  <%= button_to "Destroy this Schedule", @immunization_schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block" %>

  <% if @immunization_schedule.status === false %>
    <%= button_to "Follow Up SMS", send_sms_path(@child), method: :post, class: "btn btn-primary btn-block" %>
  <% end %>
  
  <%= button_to "Follow Up Call", follow_up_call_child_immunization_schedule_path(@child, @immunization_schedule), method: :post, class: "btn btn-primary btn-block" %>
  
  
</div>
</div>